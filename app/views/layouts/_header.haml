    %nav
      = link_to 'Strona główna', root_url,
        class: "nav-link #{params[:controller] != 'page' ? 'active' : ''}"
      = link_to 'O nas', page_path(page: 'about'),
        class: "nav-link #{params[:controller] == 'page' ? 'active' : ''}"

